<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:background="#ff44e6"
    tools:context=".MainActivity"
    tools:theme="?attr/actionBarPopupTheme">

    <Button
        android:id="@+id/ID1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ID4"
        android:layout_alignParentStart="true"
        android:width="96dp"
        android:height="70dp"
        android:text="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="@color/colorLightGreen" />

    <Button
        android:id="@+id/ID2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ID1"
        android:layout_toEndOf="@+id/ID1"
        android:width="96dp"
        android:height="70dp"
        android:background="@color/colorLightGreen"
        android:lines="@android:integer/config_mediumAnimTime"
        android:text="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Button
        android:id="@+id/ID3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ID1"
        android:layout_toEndOf="@+id/ID2"
        android:width="96dp"
        android:height="70dp"
        android:text="3"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="#FF99CC00" />

    <Button
        android:id="@+id/ID4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ID7"
        android:layout_alignParentStart="true"
        android:width="96dp"
        android:height="70dp"
        android:text="4"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="#FF99CC00" />

    <Button
        android:id="@+id/ID5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ID2"
        android:layout_below="@+id/ID1"
        android:width="96dp"
        android:height="70dp"
        android:text="5"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="#FF99CC00" />

    <Button
        android:id="@+id/ID6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ID1"
        android:layout_toEndOf="@+id/ID2"
        android:width="96dp"
        android:height="70dp"
        android:text="6"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="#FF99CC00" />

    <Button
        android:id="@+id/ID7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ID10"
        android:layout_alignParentStart="true"
        android:width="96dp"
        android:height="70dp"
        android:text="7"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="#FF99CC00" />

    <Button
        android:id="@+id/ID8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ID2"
        android:layout_below="@+id/ID4"
        android:width="96dp"
        android:height="70dp"
        android:text="8"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="#FF99CC00" />

    <Button
        android:id="@+id/ID9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ID4"
        android:layout_toEndOf="@+id/ID2"
        android:width="96dp"
        android:height="70dp"
        android:text="9"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="#FF99CC00" />

    <Button
        android:id="@+id/ID10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:width="96dp"
        android:height="70dp"
        android:text="="
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="#FF99CC00" />

    <Button
        android:id="@+id/ID12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:width="96dp"
        android:height="70dp"
        android:text="/"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="#FF99CC00" />

    <Button
        android:id="@+id/ID13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ID1"
        android:width="96dp"
        android:height="70dp"
        android:text="-"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="#FF99CC00" />

    <Button
        android:id="@+id/ID14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ID7"
        android:layout_marginEnd="0dp"
        android:width="96dp"
        android:height="70dp"
        android:text="+"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="#FF99CC00" />

    <Button
        android:id="@+id/ID15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ID2"
        android:width="96dp"
        android:height="70dp"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="#FF99CC00" />

    <Button
        android:id="@+id/ID16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ID1"
        android:width="96dp"
        android:height="70dp"
        android:text="CLR"
        android:background="#FF99CC00" />

    <Button
        android:id="@+id/ID11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/ID2"
        android:width="96dp"
        android:height="70dp"
        android:background="#FF99CC00"
        android:text="*"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/TV1"
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:layout_alignBottom="@+id/ID1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#FF00CCCC"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

</RelativeLayout>
